<div class= "home-container" >

 <div id="banner-image">
    <div id="banner-title">
       <h1 > <strong> Rent a Cat  </strong> </h1>
       <h2> Louez un chat à côté de chez vous </h2>

    </div>
 </div>


  <div id="last-cats-added-container" class="text-center">
    <h2>Les derniers chats ajoutés</h2>
    <div class="container">
      <div class="row">
           <% @cats.last(4).each do |cat| %>
        <div class="col-xs-12 col-sm-3">
          <div class="thumbnail">

         <%= image_tag cat.picture.url(:medium) %>



            <h2><%= cat.name %></h2>
            <p><%= cat.description %></p>
            //<strong><%= cat.price %></strong>
            <%= cat.city %>
          </div>
        </div>
         <% end %>
      </div>
    </div>
  </div>


</div>






