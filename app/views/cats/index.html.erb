<div class="container">
   <div class="row">
    <div class="row col-xs-6 col-sm-6 col-md-6" style="margin-top: 27px">
      <% @cats.each do |cat| %>
        <div class="thumbnail card card-gradient col-xs-3 col-sm-3 col-md-3" style="background-image: url('<%=image_path cat.picture.url(:medium)%>')">
          <h2><%= cat.name %></h2>
          <strong><h4><%= cat.price %>â‚¬/jour</h4></strong>
          <p><%= cat.address %>
          <%= cat.zip_code %>
          <%= cat.city %></p>
          <div class="list-inline">
            <div>
            <li class="position">
              <%if cat.availability == false %>
                <span style="color: red">Non disponible</span>
              <% else %>
                <span style="color: green">Disponible</span>
              <% end %>
            </li>
            </div>
            <li class="position2"><%= link_to "RESERVER", cat_path(cat), class: "btn btn-success" %></li>
          </div>
        </div>
      <% end %>
     <%= will_paginate @cats %>
    </div>

    <div class="container col-xs-6 col-sm-6 col-md-6">
    <div id="map" style="width: 100%; height: 759px;"></div>

    <% content_for(:after_js) do %>
      <%= javascript_tag do %>
        $(document).on('ready', function() {
          handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function(){
            markers = handler.addMarkers(<%= raw @markers.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
          });
        })
      <% end %>
    <% end %>
    </div>
 </div>
</div>
